cfg:
  site:
    name: 道盒发布模板
    contact: hello@example.com
    summary: 此博客模板适用于道盒发布，可以在此基础上自由更改，分发。
    keywords: everkm, publish, everkm-theme, yilog, 道盒
    description: 经典BLOG模板。
    # beian: 中ICP备20230828
  page_size: 12
  default_lang: zh_CN
  home_news:
    section_name: Blog
    dir: /blog/
    top_count: 5
    more:
      title: More
      link: ./blog/

sitemap:
  channel_name: 首页
  children:
    - path: posts/
      channel_name: 文章
      qs:
        __tpl: details.html
    - path: wiki/
      channel_name: WIKI
      qs:
        __tpl: wiki.html
      children:
        - path: /index.html
          qs:
            __tpl: wiki.html
            home: 1
            path: /_wiki/index.md

map_url:
  - dir: /_wiki/
    url: /wiki/{{slug}}.html